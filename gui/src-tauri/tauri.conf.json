{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "chiseltrace",
  "version": "0.1.0",
  "identifier": "com.chiseltrace.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "chiseltrace",
        "maximized": true,
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "webview": {
      "webviewAttributes": {
        "enableWebGL": true,
        "transparent": false
      }
    }
  }
}
